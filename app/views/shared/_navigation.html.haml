.navbar
  .nav-container
    .title
      = link_to root_path do
        MediPark
    .right-box
      - if user_signed_in?
        .right-box__favs
          = link_to root_path do
            = fa_icon "heart"
            いいね！
        .right-box__post
          = link_to new_article_path do
            = fa_icon "edit"
            投稿する
        .right-box__profile
          = link_to root_path do
            = fa_icon "user-circle"
            プロフィール
        .right-box__log-out
          = link_to destroy_user_session_path, method: :delete do
            = fa_icon "sign-out"
            ログアウト
      - else
        .right-box__sign-up
          = link_to new_user_registration_path do
            = fa_icon "rocket"
            無料会員登録
        .right-box__log-in
          = link_to new_user_session_path do
            = fa_icon "lock"
            ログイン