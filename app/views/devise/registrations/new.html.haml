.sign-up
  .box
    .form
      %h1.form__title Sign up!
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :name
          %br/
          = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザ名"
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認）"
        .actions
          = f.submit "Sign up"
      = render "devise/shared/links"
  